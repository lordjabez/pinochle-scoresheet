<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.singledsoftware.scoresheet"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.singledsoftware.scoresheet.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.singledsoftware.scoresheet.PlayersActivity"
            android:label="@string/title_activity_players"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.singledsoftware.scoresheet.BidActivity"
            android:label="@string/title_activity_bid"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.singledsoftware.scoresheet.MeldActivity"
            android:label="@string/title_activity_meld"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.singledsoftware.scoresheet.PointsActivity"
            android:label="@string/title_activity_points"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.singledsoftware.scoresheet.FinishedActivity"
            android:label="@string/title_activity_finished"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>
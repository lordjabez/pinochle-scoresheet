<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/player0_name"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player1_name"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/player2_name"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player3_name"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/bid"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/hand0_team0"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1" />

        <TextView
            android:id="@+id/hand0_team1"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1" />

        <TextView
            android:id="@+id/hand0_bid"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/hand1_team0"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1" />

        <TextView
            android:id="@+id/hand1_team1"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1" />

        <TextView
            android:id="@+id/hand1_bid"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/hand2_team0"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1" />

        <TextView
            android:id="@+id/hand2_team1"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1" />

        <TextView
            android:id="@+id/hand2_bid"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/hand3_team0"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1" />

        <TextView
            android:id="@+id/hand3_team1"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1" />

        <TextView
            android:id="@+id/hand3_bid"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/total_team0"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_team1"
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/status_item_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:textStyle="bold" />
    </TableRow>

</TableLayout>